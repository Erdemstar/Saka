@model cross_site_request_forgery_money_transfer.Core.Entity.View.AccountFinancial.AccountFinancialViewEntity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">


            <div>

                <h2>@Model.Account.Username</h2>
                <h2>@Model.Financial.Money.ToString()</h2>

                <h2>Money Transfer</h2>

                <form method="post" enctype="multipart/form-data" action="/Home/Attack">
                    <div class="form-group row">
                        <label for="customerNumber" class="col-sm-2 col-form-label">Customer Number</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="customerNumber" name="customerNumber">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="money" class="col-sm-2 col-form-label">Money</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="money" name="money">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>

            <div style="margin-top: 5%">


            </div>

        </div>


        <div class="col-md-2"></div>
    </div>

</div>