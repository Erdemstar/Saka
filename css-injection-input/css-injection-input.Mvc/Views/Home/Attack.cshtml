@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tag = ViewBag.tag;
    var color = ViewBag.color;
}

<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">
            <div>
                <form method="post" action="/Home/Attack" enctype="multipart/form-data">
                    <div class="input-group">
                        <select name="color" class="custom-select" aria-label="Select your input type">
                            <option value="black">Black</option>
                            <option value="red">Red</option>
                            <option value="green">Green</option>
                            <option value="orange">Orange</option>
                            <option value="yellow">Yellow</option>
                            <option value="white">White</option>

                        </select>
                    </div>
                    
                    <div class="input-group" style="margin-top: 2%">
                        <select name="tag" class="custom-select" aria-label="Select your tag">
                            <option value="h1">H1 tag</option>
                            <option value="h2">H2 tag</option>
                            <option value="h3">H3 tag</option>
                            <option value="h4">H4 tag</option>
                            <option value="h5">H5 tag</option>
                            <option value="h6">H6 tag</option>

                        </select>
                    </div>
                
                            
                    <div class="input-group-append" style="margin-top: 2%">
                        <button class="btn btn-outline-secondary" type="submit">Submit</button>
                    </div>
                </form>
            </div>

            <div style="margin-top: 5%">

                <@tag class="alert alert-success" style="color:@Html.Raw(color)" role="alert">
                Hello guys
                </@tag>


            </div>

        </div>


        <div class="col-md-2"></div>
    </div>

</div>