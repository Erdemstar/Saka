@model local_file_inclusion_filename.Core.Entity.File.FileEntity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div>
                <h2>Sample Files</h2>
                <ul>
                    <li>
                        <a asp-action="Attack" asp-controller="Home" asp-route-filename="sample.txt">Sample</a>
                    </li>
                    <li>
                        <a asp-action="Attack" asp-controller="Home" asp-route-filename="sample2.txt">Sample 2</a>
                    </li>
                    <li>
                        <a asp-action="Attack" asp-controller="Home" asp-route-filename="sample3.txt">Sample 3</a>
                    </li>
                </ul>
            </div>

            <div>
                <h2>File Content</h2>
                <div class="form-group">
                    <label for="text">Filename</label>
                    <input type="text" class="form-control" id="text" placeholder="@Model.Name" disabled="disabled">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="content" rows="7">@Model.Content</textarea>
                </div>
            </div>

        </div>

        <div class="col-md-2"></div>
    </div>

</div>