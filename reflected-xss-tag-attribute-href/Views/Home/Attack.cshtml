@model reflected_xss_tag_attribute_href.Models.Redirect;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-2">

        </div>

        <div class="col-md-8">

            @{
                if (@Model.url != "")
                {
                    <div class="" role="alert" style="margin-top: 3%;margin-bottom: 1%; text-align: center;">
                        <a class="btn btn-dark" href="@Html.Raw(Model.url)" role="button">Click and Go</a>
                    </div>
                }
            }

            <form method="get">
                <div class="form-group">
                    <label for="url">You can enter url where you go</label>
                    <input type="text" class="form-control" id="url" name="url" aria-describedby=""
                           placeholder="Example: https://erdemstar.com/">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div class="col-md-2">

        </div>
    </div>

</div>
