@model reflected_xss_tag_attribute.Models.Image; 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-2">

        </div>

        <div class="col-md-8">

            @{ 
                if (Model.url != "") { 
                
                    <div class="" role="alert" style="margin-top: 3%;margin-bottom: 1%; text-align: center;">
                        <img src="@Html.Raw(Model.url)" target="_blank" width="300px" height="300px">
                    </div>
                }
            }

            <form method="get">
                <div class="form-group">
                    <label for="url">You can add image using link</label>
                    <input type="text" class="form-control" id="url" name="url" aria-describedby=""
                           placeholder="Example: https://erdemstar.com/profile.png">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <div class="col-md-2">

        </div>
    </div>

</div>