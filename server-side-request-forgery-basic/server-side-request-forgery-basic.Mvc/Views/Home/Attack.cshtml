@model server_side_request_forgery_basic.Mvc.Controllers.HttpResponseEntity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 10%;">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">

            <div>
                <h2> Healthcheck Request </h2>
                <form action="/Home/Attack" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="url">Please enter URL</label>
                        <input type="text" name="url" class="form-control" id="url">
                    </div>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
            
            <div style="margin-top:5%">
                        
                @if (string.IsNullOrEmpty(ViewBag.urlFormatError) == false)
                {
                    <h1>@ViewBag.urlFormatError </h1>
                }
                        
                @if (Model is not null)
                {
                    if (Model.isSuccess)
                    {
                        <h1>@Model.url</h1>
                        <h1>@Model.statusCode</h1>
                        <h1>@Model.content</h1>
                    }
                    else
                    {
                        <h1>@Model.url</h1>
                        <h1>@Model.statusCode</h1>
                        <h1>@Model.content</h1>
                    }
                            
                }
                        
            </div>
            
            
        </div>
        
        <div class="col-md-2"></div>
    </div>

</div>